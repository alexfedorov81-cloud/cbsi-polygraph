    <link rel="apple-touch-icon" sizes="60x60" href="{% static 'favicon/apple-icon-60x60.png' %}">
    <link rel="apple-touch-icon" sizes="72x72" href="{% static 'favicon/apple-icon-72x72.png' %}">
    <link rel="apple-touch-icon" sizes="76x76" href="{% static 'favicon/apple-icon-76x76.png' %}">
    <link rel="apple-touch-icon" sizes="114x114" href="{% static 'favicon/apple-icon-114x114.png' %}">
    <link rel="apple-touch-icon" sizes="120x120" href="{% static 'favicon/apple-icon-120x120.png' %}">
    <link rel="apple-touch-icon" sizes="144x144" href="{% static 'favicon/apple-icon-144x144.png' %}">
    <link rel="apple-touch-icon" sizes="152x152" href="{% static 'favicon/apple-icon-152x152.png' %}">
    <link rel="apple-touch-icon" sizes="180x180" href="{% static 'favicon/apple-icon-180x180.png' %}">
    <link rel="icon" type="image/png" sizes="192x192" href="{% static 'favicon/android-icon-192x192.png' %}">
    <link rel="icon" type="image/png" sizes="32x32" href="{% static 'favicon/favicon-32x32.png' %}">
    <link rel="icon" type="image/png" sizes="96x96" href="{% static 'favicon/favicon-96x96.png' %}">
    <link rel="icon" type="image/png" sizes="16x16" href="{% static 'favicon/favicon-16x16.png' %}">
    <link rel="manifest" href="{% static 'favicon/manifest.json' %}">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="{% static 'favicon/ms-icon-144x144.png' %}">
    <meta name="theme-color" content="#ffffff">

    {% include 'includes/seo.html' %}

    <title>{% block title %}ЦВСИ - Сибирский центр выявления скрываемой информации{% endblock %}</title>

    <!-- Стили для фиксов -->
    <style>
    /* Быстрые фиксы для шапки и герой-секции */
    .header-fixed {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
        background: rgba(15, 23, 42, 0.98);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(100, 116, 139, 0.2);
        padding: 0;
    }

    .main-content-fixed {
        margin-top: 64px;
    }

    .hero-centered {
        min-height: calc(100vh - 64px);
        display: flex;
        align-items: center;
    }

    .equipment-size-fix {
        max-width: 400px;
        margin: 0 auto;
    }

    @media (max-width: 768px) {
        .header-fixed {
            padding: 0;
        }

        .main-content-fixed {
            margin-top: 60px;
        }

        .hero-centered {
            min-height: calc(100vh - 60px);
            padding-top: 20px;
        }

        .equipment-size-fix {
            max-width: 100%;
        }
    }
    /* Стили для второго футера с документами */
    .footer-documents {
        background: rgba(15, 23, 42, 0.98);
        margin-top: 0;
    }

    .footer-documents a {
        transition: color 0.2s ease;
        font-size: 1.125rem; /* text-lg */
        font-weight: 700; /* font-bold */
    }

    .footer-documents a:hover {
        color: #63b3ed !important;
        text-decoration: underline;
    }

    /* Адаптивность */
    @media (max-width: 768px) {
        .footer-documents .max-w-md {
            max-width: 100%;
            padding: 0 1rem;
        }

        .footer-documents {
            padding-top: 1.5rem;
            padding-bottom: 2rem;
        }

        .footer-documents a {
            font-size: 1rem;
        }
    }
    </style>

    <link rel="stylesheet" href="{% static 'css/main.css' %}?v={{ STATIC_VERSION }}">
    <link rel="stylesheet" href="{% static 'css/layout.css' %}?v={{ STATIC_VERSION }}">
    <link rel="stylesheet" href="{% static 'css/components.css' %}?v={{ STATIC_VERSION }}">
    <link rel="stylesheet" href="{% static 'css/animations.css' %}?v={{ STATIC_VERSION }}">
    <link rel="stylesheet" href="{% static 'css/typography.css' %}?v={{ STATIC_VERSION }}">
    <link rel="stylesheet" href="{% static 'css/backgrounds.css' %}?v={{ STATIC_VERSION }}">
    <link rel="stylesheet" href="{% static 'css/equipment.css' %}?v={{ STATIC_VERSION }}">
    <link rel="stylesheet" href="{% static 'css/mobile.css' %}?v={{ STATIC_VERSION }}">

    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

</head>
<body class="body-bg text-light font-sans"
      data-site-version="{{ SITE_VERSION }}"
      data-global-version="{{ GLOBAL_VERSION }}">

   <header class="header header-fixed">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-3">
                <div class="text-xl font-bold">
                    <span class="text-accent">ЦВСИ</span>
                    <span class="text-light hidden md:inline"> - Сибирский центр выявления скрываемой информации</span>
                    <span class="text-light md:hidden"> - Центр выявления cкрываемой информации</span>
                </div>

                <div class="flex items-center space-x-4">
                    <a href="tel:{{ settings.phone }}" class="phone-btn-blue hidden sm:inline-flex">
                        <i class="fas fa-phone mr-2"></i>Позвонить
                    </a>

                    <a href="tel:{{ settings.phone }}" class="phone-icon-blue sm:hidden">
                        <i class="fas fa-phone text-xl"></i>
                    </a>

                    <button class="md:hidden burger-menu ml-2 text-2xl text-light hover:text-accent transition-colors"
                            id="burgerBtn" aria-label="Открыть меню">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>

            <div class="hidden md:flex justify-center space-x-4 py-2">
                <a href="#about" class="nav-btn">О нас</a>
                <a href="#location-card" class="nav-btn">Как нас найти</a>
                <a href="#services" class="nav-btn">Услуги</a>
                <a href="#reviews" class="nav-btn">Отзывы</a>
                <a href="#research" class="nav-btn">Об исследовании</a>
                <a href="#contacts" class="nav-btn">Контакты</a>
            </div>
        </div>

        <!-- Мобильное меню (выпадающее) -->
        <div class="mobile-menu hidden fixed inset-0 z-50" id="mobileMenu">
            <!-- Заголовок меню -->
            <div class="mobile-menu-header flex justify-between items-center p-4">
                <div class="text-xl font-bold">
                    <span class="text-accent">ЦВСИ</span>
                    <span class="text-light"> - Центр выявления<br>скрываемой информации</span>
                </div>
                <button class="close-menu" id="closeMenu" aria-label="Закрыть меню">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <!-- Навигационные ссылки -->
            <nav class="mobile-menu-nav">
                <a href="#about" class="mobile-nav-btn">
                    <i class="fas fa-info-circle mr-3"></i>
                    <span>О нас</span>
                </a>

                <a href="#location-card" class="mobile-nav-btn">
                    <i class="fas fa-map-marker-alt mr-3"></i>
                    <span>Как нас найти</span>
                </a>

                <a href="#services" class="mobile-nav-btn">
                    <i class="fas fa-clipboard-list mr-3"></i>
                    <span>Услуги</span>
                </a>

                <a href="#reviews" class="mobile-nav-btn">
                    <i class="fas fa-star mr-3"></i>
                    <span>Отзывы</span>
                </a>

                <a href="#research" class="mobile-nav-btn">
                    <i class="fas fa-microscope mr-3"></i>
                    <span>Об исследовании</span>
                </a>

                <a href="#contacts" class="mobile-nav-btn">
                    <i class="fas fa-address-book mr-3"></i>
                    <span>Контакты</span>
                </a>
            </nav>

            <!-- Кнопка позвонить в меню -->
            <div class="mobile-menu-footer">
                <a href="tel:{{ settings.phone }}" class="mobile-phone-btn">
                    <i class="fas fa-phone mr-3"></i>
                    <span>Позвонить сейчас</span>
                </a>
            </div>
        </div>
    </header>

    <main class="main-content main-content-fixed">
        {% block content %}
        {% endblock %}
    </main>

    {% include 'includes/footer.html' %}

    <script src="{% static 'js/main.js' %}?v={{ STATIC_VERSION }}"></script>
    <script src="{% static 'js/components/forms.js' %}?v={{ STATIC_VERSION }}"></script>
    <script src="{% static 'js/components/equipment.js' %}?v={{ STATIC_VERSION }}"></script>
    <script src="{% static 'js/app.js' %}?v={{ STATIC_VERSION }}"></script>
    <script src="{% static 'js/components/navigation.js' %}?v={{ STATIC_VERSION }}"></script>
    <script src="{% static 'js/components/mobile-menu.js' %}?v={{ STATIC_VERSION }}"></script>



    {% block extra_js %}
    {% endblock %}

    {% comment %} Модальное окно на всех страницах {% endcomment %}
    {% include 'includes/modal_callback.html' %}
</body>
</html>
